<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etName"
                android:hint="Name (Optional)"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/accentColor"
                android:textSize="@dimen/_13ssp"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etPhone"
                android:hint="Phone (Optional)"
                android:inputType="phone"
                app:met_maxCharacters="11"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/_13ssp"
                android:maxLength="20"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent"
                />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/idalat"
                android:hint="AlatPres ID"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                android:visibility="gone"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/location"
                android:hint="Location"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"

                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/type_alat"
                android:hint="Type Alat"
                android:inputType="textCapWords"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15ssp"
                android:id="@+id/imageView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15ssp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/attach"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Add Attachment (Optional)"
                    android:textColor="@color/colorBlack"
                    android:typeface="monospace" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:id="@+id/file"
                    android:src="@drawable/file" />
            </LinearLayout>



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/last"
                android:hint="Counties"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/accentColor"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_width="match_parent"
                app:met_singleLineEllipsis="true"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorAccent" />


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_weight=".5"
            android:background="@drawable/button_shape"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Cancel" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/update"
            android:layout_width="100dp"
            android:layout_weight=".5"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_shape"
            android:layout_height="wrap_content"
            android:text="Send" />

    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>